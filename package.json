    "@types/node": "^20.9.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "taze": "^0.12.0",
    "tsup": "^7.3.0",
    "tsx": "^4.1.3",
    "turbo": "latest",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
